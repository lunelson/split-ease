include utilities

doctype html
html(lang="en")
  head
    //- std
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title= $data.social.title
    //- schema
    meta(itemprop='name' content=$data.social.title)
    meta(itemprop='description' content=$data.social.description)
    meta(itemprop='image' content=$data.social.image)
    //- twitter
    meta(name='twitter:card' content=$data.social.description)
    meta(name='twitter:site' content=$data.social.twitter)
    meta(name='twitter:creator' content=$data.social.twitter)
    //- opengraph
    meta(property='og:type' content=$data.social.type)
    meta(property='og:url' content=$data.social.url)
    meta(property='og:title' content=$data.social.title)
    meta(property='og:description', content=$data.social.description)
    meta(property='og:image' content=$data.social.image)

    link(href="/index.css", rel="stylesheet")

  body
    #page.stack-xl
      header.wrap-last.frame.frame-top
        .span-9
          .stack-l
            h1.f-sans-xxl SplitEase.js
            h2.f-sans-xl The curve with a beginning, middle and end.
            p.f-sans-l= _chance.paragraph({ sentences: 4 })

      main.wrap-last.frame
        block main
      footer.wrap-last.frame.frame-bottom
      script(src="/index.js")
